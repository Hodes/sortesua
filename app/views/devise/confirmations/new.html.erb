<h2>Reenviar instruções de confirmação</h2>

<%= form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post, :class => 'well form-inline' }) do |f| %>
  <%= devise_error_messages! %>


  <%= f.label :email %>
  <%= f.email_field :email %>
  <%= f.submit "Reenviar", :class => 'btn btn-primary'%>
<% end %>

<%= render :partial => "devise/shared/links" %>