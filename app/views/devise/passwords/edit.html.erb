<h2>Change your password</h2>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, :class => 'form-horizontal' }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <fieldset>
    <div class="control-group">
      <%= f.label :password, 'Nova senha', :class => 'control-label' %>
      <div class="controls">
        <%= f.password_field :password %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :password_confirmation, 'Confirme a nova senha', :class => 'control-label' %>
      <div class="controls">
        <%= f.password_field :password_confirmation %>
      </div>
    </div>

    <div class="form-actions"><%= f.submit "Mude minha senha", :class => 'btn btn-primary' %></div>
  </fieldset>
<% end %>

<%= render :partial => "devise/shared/links" %>