<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => 'form-horizontal user_new' }) do |f| %>
  <%= devise_error_messages! %>

  <fieldset>
    <legend>Nova conta</legend>
    <div class="control-group">
      <%= f.label :email, :class => 'control-label' %>
      <div class="controls">
        <%= f.email_field :email %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :password, 'Senha', :class => 'control-label' %>
      <div class="controls">
        <%= f.password_field :password %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :password_confirmation, 'Confirmação de senha', :class => 'control-label' %>
      <div class="controls">
        <%= f.password_field :password_confirmation %>
      </div>
    </div>

    <div class="form-actions"><%= f.submit "Registre", :class => 'btn btn-primary' %></div>
  </fieldset>
<% end %>

<%= render :partial => "devise/shared/links" %>
